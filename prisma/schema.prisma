// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Transcript {
  id        String    @id @default(cuid())
  sourceId  String    @unique
  segments  Segment[]
  words     Word[]
  speakers  Speaker[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Segment {
  id           String     @id @default(cuid())
  transcriptId String
  transcript   Transcript @relation(fields: [transcriptId], references: [id], onDelete: Cascade)
  start        Float
  end          Float
  speaker      String
  text         String
  
  @@index([transcriptId])
}

model Word {
  id           String     @id @default(cuid())
  transcriptId String
  transcript   Transcript @relation(fields: [transcriptId], references: [id], onDelete: Cascade)
  text         String
  start        Float
  end          Float
  speaker      String?
  
  @@index([transcriptId])
  @@index([start])
}

model Speaker {
  id           String     @id @default(cuid())
  transcriptId String
  transcript   Transcript @relation(fields: [transcriptId], references: [id], onDelete: Cascade)
  originalName String     // AI-detected name
  customName   String     // User-edited name
  
  @@index([transcriptId])
}